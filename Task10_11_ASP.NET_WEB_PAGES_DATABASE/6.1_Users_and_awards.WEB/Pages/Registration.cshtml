@using _6._1_Users_and_awards.WEB.Models;
@{
    string errorMessage = null;
    if (IsPost)
    {
        var login = Request["login"];
        var pass = Request["pass"];
        if (MyRoleProvider.CreateUser(login, pass))
        {
            Response.Redirect("/Pages/SignIn");
            return;
        }
        else
        {
            errorMessage = "Registration error! This login already exists";
        }
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
</head>
<body>
    @if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    <div class="text-center"><h3>Page of registration new user</h3></div>
    <div class="text-center">
        <form method="post" class="centered-top">
            <div>Login: <input type="text" name="login" value="" /></div>
            <div>Password: <input type="password" name="pass" value="" /></div>
            <button>Registration</button>
        </form>
    </div>
</body>
</html>