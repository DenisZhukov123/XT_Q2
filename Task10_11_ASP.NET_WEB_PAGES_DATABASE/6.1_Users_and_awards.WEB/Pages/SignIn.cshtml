@using _6._1_Users_and_awards.WEB.Models;
@{
    string errorMessage=null;
    if (IsPost)
    {
        var login = Request["login"];
        var pass = Request["pass"];
        if (Auth.CanLogin(login, pass))
        {
            FormsAuthentication.SetAuthCookie(login, true);
            Response.Redirect("/Pages/Index");
            return;
        }
        else
        {
            errorMessage = "Invalid login or password";
        }
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login page</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
</head>
<body>
    @if (errorMessage != null)
    {
        <div class="alert alert-danger">
            @errorMessage 
        </div>
    }
<div class="text-center">
    <div><h4>Enter your login and password to log in as 'User' or 'Admin' or click the button 'SignIn' to log in as 'Guest'</h4></div>
    <form method="post" class="centered-top">
        <div><h4>Login</h4></div>
        <input type="text" name="login" />
        <div><h4>Password</h4></div>
        <div><input type="password" name="pass" /></div>
        <button>SignIn</button>
    </form>
</div>
</body>
</html>